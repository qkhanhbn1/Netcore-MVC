@model DADevXuongMoc.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}


<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white text-center">
                    <h4>Chỉnh sửa thông tin</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Icon" class="form-label fw-bold">Ảnh</label>
                            <input asp-for="Icon" type="file" class="form-control" />
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MetaDescription" class="form-label fw-bold">Mô tả Meta</label>
                            <input asp-for="MetaDescription" class="form-control" placeholder="Nhập mô tả Meta" />
                            <span asp-validation-for="MetaDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreatedDate" class="form-label fw-bold">Ngày tạo</label>
                            <input asp-for="CreatedDate" class="form-control" placeholder="Nhập ngày tạo" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Ghi chú</label>
                            <textarea asp-for="Notes" class="form-control" placeholder="Nhập ghi chú" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="1">Mở</option>
                                <option value="0">Đóng</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-success me-3">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
