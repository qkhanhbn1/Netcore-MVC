@model DADevXuongMoc.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Bạn có chắc chắn muốn xóa?</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Danh mục chi tiết</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Tiêu đề</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3 fw-bold">Biểu tượng</dt>
                        <dd class="col-sm-9">
                            <img src="@Url.Content(Model.Icon)" alt="Icon" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                        </dd>

                        <dt class="col-sm-3 fw-bold">Từ khóa Meta</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MetaKeyword)</dd>

                        <dt class="col-sm-3 fw-bold">Mô tả Meta</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MetaDescription)</dd>

                        <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

                        <dt class="col-sm-3 fw-bold">Ghi chú</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>

                        <dt class="col-sm-3 fw-bold">Trạng thái</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>
                    <div class="text-center">
                        <form asp-action="Delete" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger me-2">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
