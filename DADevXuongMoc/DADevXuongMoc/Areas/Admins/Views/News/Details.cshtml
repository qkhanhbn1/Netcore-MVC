@model DADevXuongMoc.Models.News

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-primary mb-4">Chi tiết Tin Tức</h1>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="text-end" style="width: 30%;">@Html.DisplayNameFor(model => model.Code)</th>
                    <td>@Html.DisplayFor(model => model.Code)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Title)</th>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Description)</th>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Content)</th>
                    <td>@Html.DisplayFor(model => model.Content)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Image)</th>
                    <td>
                        @* Hiển thị ảnh nếu có *@
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Url.Content(Model.Image)" alt="News Image" class="img-fluid" style="max-width: 300px; max-height: 200px;" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.MetaTitle)</th>
                    <td>@Html.DisplayFor(model => model.MetaTitle)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.MainKeyword)</th>
                    <td>@Html.DisplayFor(model => model.MainKeyword)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.MetaKeyword)</th>
                    <td>@Html.DisplayFor(model => model.MetaKeyword)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.MetaDescription)</th>
                    <td>@Html.DisplayFor(model => model.MetaDescription)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Slug)</th>
                    <td>@Html.DisplayFor(model => model.Slug)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Views)</th>
                    <td>@Html.DisplayFor(model => model.Views)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Likes)</th>
                    <td>@Html.DisplayFor(model => model.Likes)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Star)</th>
                    <td>@Html.DisplayFor(model => model.Star)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.CreatedDate)</th>
                    <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.UpdatedDate)</th>
                    <td>@Html.DisplayFor(model => model.UpdatedDate)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.AdminCreated)</th>
                    <td>@Html.DisplayFor(model => model.AdminCreated)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.AdminUpdated)</th>
                    <td>@Html.DisplayFor(model => model.AdminUpdated)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Status)</th>
                    <td>@Html.DisplayFor(model => model.Status)</td>
                </tr>
                <tr>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Isdelete)</th>
                    <td>@Html.DisplayFor(model => model.Isdelete)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-danger">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
