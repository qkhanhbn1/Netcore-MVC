@model DADevXuongMoc.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white text-center">
            <h4>Xóa Sản Phẩm</h4>
        </div>
        <div class="card-body">
            <p class="text-warning text-center"><strong>bạn có chắc không?</strong></p>

            <div>
                <h5 class="mb-4">Thông Tin Sản Phẩm</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Mã loại sản phẩm</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Cid)</dd>

                    <dt class="col-sm-3">Tiêu đề</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">mô tả</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-3">Nội dung</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                    <dt class="col-sm-3">Ảnh</dt>
                    <dd class="col-sm-9"><img src="@Url.Content(Model.Image)" alt="Image" class="img-fluid" style="max-width: 150px;"></dd>

                    <dt class="col-sm-3">Giá cũ</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.PriceOld)</dd>

                    <dt class="col-sm-3">Giá mới</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.PriceNew)</dd>

                    <dt class="col-sm-3">Kích cỡ</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Size)</dd>

                    <dt class="col-sm-3">Ngày tạo</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

                    <dt class="col-sm-3">Trạng thái</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

