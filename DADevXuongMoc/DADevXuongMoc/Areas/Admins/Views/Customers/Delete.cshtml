@model DADevXuongMoc.Models.Customer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Bạn có chắc chắn muốn xóa?</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center mb-4">Chi tiết khách hàng</h5>
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Họ và tên</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 fw-bold">Tên đăng nhập</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                        <dt class="col-sm-4 fw-bold">Mật khẩu</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                        <dt class="col-sm-4 fw-bold">Địa chỉ</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-bold">Số điện thoại</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4 fw-bold">Trạng thái kích hoạt</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Isactive)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


