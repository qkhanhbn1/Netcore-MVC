@model DADevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="shadow p-4 rounded bg-light">
            <h2 class="text-center text-primary">Chỉnh sửa tài khoản</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Account" class="form-label fw-bold">Tài khoản</label>
                <input asp-for="Account" class="form-control" placeholder="Nhập tài khoản" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-bold">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Họ và tên</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NgayTao" class="form-label fw-bold">Ngày tạo</label>
                <input asp-for="NgayTao" type="date" class="form-control" />
                <span asp-validation-for="NgayTao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NgayCapNhat" class="form-label fw-bold">Ngày cập nhật</label>
                <input asp-for="NgayCapNhat" type="date" class="form-control" />
                <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrangThai" class="form-label fw-bold">Trạng thái</label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="1">Mở</option>
                    <option value="0">Đóng</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
