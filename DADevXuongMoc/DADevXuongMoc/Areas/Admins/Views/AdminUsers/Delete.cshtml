@model DADevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h3 class="text-center text-danger">Bạn có chắc muốn xóa?</h3>
    <hr />
    <div class="card shadow rounded">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tài khoản:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Account)</dd>

                <dt class="col-sm-3 fw-bold">Mật khẩu:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-3 fw-bold">Họ và tên:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-bold">Số điện thoại:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3 fw-bold">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">Ngày tạo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>

                <dt class="col-sm-3 fw-bold">Trạng thái:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa" class="btn btn-danger px-4" />
        </form>
        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

