@model List<DADevXuongMoc.Models.Order>

<div class="container mt-5" >
    <h2 class="text-center mb-4" style="margin-top:10rem">Danh sách đơn hàng của bạn</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Idorders</td>
                        <td>@order.OrdersDate?.ToString("dd/MM/yyyy")</td>
                        <td>@order.TotalMoney?.ToString("C")</td>
                        <td>@(order.Isactive == 1 ? "Đã xử lý" : "Chưa xử lý")</td>
                        <td>
                            <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info btn-sm">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">Chưa có đơn hàng nào.</p>
    }

    <div class="text-center mt-4">
        <a asp-action="Profile" class="btn btn-secondary">Quay lại trang profile</a>
    </div>
</div>
<br />