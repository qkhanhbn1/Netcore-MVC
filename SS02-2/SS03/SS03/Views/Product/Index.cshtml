@{
    ViewData["Title"] = "Product";
    var products = ViewBag.products;
    var categories = ViewBag.Categories;
}
<div class="container" >
        <div class="row">
        <!-- Sidebar for Categories -->
        <div class="col-md-3">
            <h4>DANH MỤC</h4>
            <ul class="list-group">
                @foreach (var category in categories)
                {
                    <li class="list-group-item">@category.Name</li>
                }
            </ul>
        </div>

        <!-- Product List -->
        <div class="col-md-9" >
            <h2>Danh sách sản phẩm</h2>
            <div class="row" >
                @foreach (var item in products)
                {
                    <div class="col-md-3">
                        <div class="thumbnai">
                            <img src="@item.Avatar" alt="" width="200px" border="1px" />
                            <div class="caption">
                                <h3>@item.SanPham</h3>
                                <p><del>Giá:@item.Giacu</del> Giá: @item.Giamoi </p>
                                <p>
                                    <a asp-route="Chitietsanpham" asp-route-id="@item.Id" class="btn btn-success btn-block">Chi tiết</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
